            <tr class="infoBoxContent">
                <td></td>
                <td colspan="6" background="images/hline.gif"></td>
                <td></td>
            </tr>
            __MODULESLIST_DRAW__

            <tr class="infoBoxContent">
                <td colspan="8">&nbsp;</td>
            </tr>
            <tr class="infoBoxHeading">
                <td colspan="8" align="center"><input type="image" name="submit"
                        src="templates/default/images/apply.gif"></td>
