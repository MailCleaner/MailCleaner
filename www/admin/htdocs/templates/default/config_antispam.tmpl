            <td width="10%">&nbsp;</td>
            <td width="20px" align="center">__ACTIVE__</td>
            <td align="left"><b>__POSITION__</b>&nbsp;<a href="__DOWNLINK__">__DOWN_ARROW__</a><a
                    href="__UPLINK__">__UP_ARROW__</a></td>
            <td width="30%" align="left">__NAME__</td>
            <td align="center">__NEG_DECISIVE__</td>
            <td align="center">__POS_DECISIVE__</td>
            <td width="20px" align="right">
                <nobr><a href="javascript:editpf('__POSITION__')"><img src="images/pencil.gif"></a></nobr>
            </td>
            <td width="10%">&nbsp;</td>
        </tr>
        __TMPL_MODULESSLIST_STOP__


        __FORM_BEGIN_MODULES__
