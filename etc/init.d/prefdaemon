use v5.36;
use strict;
use warnings;
use utf8;

if ($0 =~ m/(\S*)\/prefdaemon$/) {
    my $path = $1."/../../lib";
    unshift (@INC, $path);
}
require ReadConfig;
require DB;
require PrefDaemon;

my $command = shift;
if (!defined($command)) {
    printUsage();
}

if ($command eq "start") {
    my $daemon = PrefDaemon::create();
    $daemon->startDaemon();
} elsif ($command eq "stop") {
    my $daemon = PrefDaemon::create();
    my $res = $daemon->getPref('EXIT', 'null');
    my $pids = `pgrep -f PrefDaemon`;
    exit if (!defined($pids) || $pids eq "");
    foreach my $pid (split(/\n/, $pids)) {
        `kill -KILL $pid 2>&1 > /dev/null`;
    }
    exit();
} else {
    printUsage();
}

sub printUsage
{
    print "Usage:\n";
    print "prefdaemon (stop|start)\n";
    exit 1;
}
