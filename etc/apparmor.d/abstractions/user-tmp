  abi <abi/3.0>,

  # per-user tmp directories
  owner @{HOME}/tmp/**  rwkl,
  owner @{HOME}/tmp/    rw,

  # global tmp directories
  owner /var/tmp/**     rwkl,
  /var/tmp/             rw,
  owner /tmp/**         rwkl,
  /tmp/                 rw,

  # Include additions to the abstraction
  include if exists <abstractions/user-tmp.d>
