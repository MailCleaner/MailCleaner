# vim:syntax=apparmor
# aspell permissions

  abi <abi/3.0>,

  # per-user settings and dictionaries
  owner @{HOME}/.aspell.*.{pws,prepl} rwk,

  # system libraries and dictionaries
  /usr/lib/aspell/ r,
  /usr/lib/aspell/* r,
  /usr/lib/aspell/*.so m,
  /usr/share/aspell/ r,
  /usr/share/aspell/* r,
  /var/lib/aspell/* r,

  # Include additions to the abstraction
  include if exists <abstractions/aspell.d>
